@model PasswordResetModel

@{
    ViewBag.Title = Html.Localize("password_reset_title"); ;
}

<div class="row">
    <h3>@ViewBag.Title</h3>
    <hr />
</div>

@Html.Partial("_Msg")

<div class="row">
    <div class="col-md-5">

        <form method="post">
            
            <div class="form-group">
                <label for="Email">@Html.Localize("email")</label>
                <input type="email" id="Email" name="Email" class="form-control" required value="@Model.Email" />
            </div>

            @Html.AntiForgeryToken()

            <button type="submit" class="btn btn-primary">@Html.Localize("btn_send_password_reset_link")</button>

        </form>

    </div>
</div>

