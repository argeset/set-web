@model PageModel<UserModel>

@{
    ViewBag.Title = Html.LocalizationString("users_listing_title");
}

<div class="row">
    <h3>@ViewBag.Title</h3>
    <hr />
</div>

<div class="row">

    <div class="col-md-12">

        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>@Html.LocalizationString("name")</th>
                        <th>@Html.LocalizationString("email")</th>
                        <th>@Html.LocalizationString("language")</th>
                        <th>@Html.LocalizationString("role")</th>
                        <th>@Html.LocalizationString("is_active")</th>
                    </tr>
                </thead>
                <tbody id="tbodyModelItems">
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@item.Language</td>
                            <td>@item.RoleName</td>
                            <td>@item.IsActive</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div>
                @{
                    if (Model.TotalPageCount > 1)
                    {
                        const string link = "/admin/users";
                        <ul class="pagination">
                            @if (Model.HasPreviousPage)
                            {
                                <li><a id="prevPage" href="@link/@(Model.Number-1)">&laquo;</a></li>
                            }
                            <li><a href="@link/@(Model.Number)">@(Model.Number)</a></li>
                            @if (Model.HasNextPage)
                            {
                                <li><a id="nextPage" href="@link/@(Model.Number+1)">&raquo;</a></li>
                            }
                        </ul>
                        <br />
                        <span class="label label-primary">@Html.LocalizationString("total_page_count") : @Model.TotalPageCount</span>
                    }
                }
            </div>
        </div>

    </div>

</div>